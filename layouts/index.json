[
  {{- $pages := where site.RegularPages "Params.search_exclude" "ne" true -}}
  {{- range $i, $p := $pages -}}
    {{- if $i }},{{ end }}
    {
      "title": {{ $p.Title | jsonify }},
      "summary": {{ ($p.Params.summary | default $p.Summary) | plainify | jsonify }},
      "content": {{ $p.Plain | jsonify }},
      "url": {{ $p.RelPermalink | jsonify }},
      "section": {{ $p.Section | jsonify }},
      "tags": {{ $p.Params.tags | jsonify }}
    }
  {{- end -}}
]
